{
  "cleanUrls": true,
  "rewrites": [
    { "source": "/", "destination": "/index.html" },
    { "source": "/brand", "destination": "/brand.html" },
    { "source": "/workshop", "destination": "/workshop.html" },
    { "source": "/prompt-vault", "destination": "/prompt-vault.html" },
    { "source": "/pass", "destination": "/pass.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Cache-Control", "value": "public, max-age=3600, s-maxage=86400" }
      ]
    }
  ],
  "builds": [
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "favicon.svg", "use": "@vercel/static" },
    { "src": "site.webmanifest", "use": "@vercel/static" },
    { "src": "robots.txt", "use": "@vercel/static" }
  ]
}